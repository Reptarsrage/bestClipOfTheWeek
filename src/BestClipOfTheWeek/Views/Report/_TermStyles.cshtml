@model BestClipOfTheWeek.Models.ReportViewModels.IndexViewModel

@if (Model.ShowTerms)
{
    <style type="text/css">
        @foreach(var term in Model.Terms.Where(t => t.Enabled))
        {
            @Html.Raw($".{term.Name} {{ font-weight: bold; color: #{term.Color}; }}")
        }
    </style>
}